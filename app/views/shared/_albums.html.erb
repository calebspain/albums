<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <% @albums.each do |album| %>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="image-container">
                            <%= image_tag(album.image) %>
                        </div>
                        <div class="card-body">
                            <p class="card-text mb-0"><%= album.description %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group text-center">
                                    <%= link_to 'Show', album, class: 'mt-2 mr-2 mb-2' %>
                                    <%= link_to 'Edit', edit_album_path(album), class: 'm-2' %>
                                    <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' }, class: 'm-2' %>
                                </div>
                            </div>
                            <small class="text-muted"><%= album.created_at %></small>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
  </div>